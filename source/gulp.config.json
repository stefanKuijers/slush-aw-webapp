{
    "name": "app",
    "build": {
        "root": "/build/",
        "production": true
    },
    "dir": {
        "src": "./src",
        "app": "./src/app",
        "tmp": "./.tmp",
        "css": "./.tmp/css",
        "data": "./data",
        "asset": "./app/asset",
        "image": "./app/asset/image",
        "fonts": "./app/asset/fonts",
        "bower_components": "./bower_components",
        "build": {
            "root": "./build",
            "src": "./build/src",
            "dist": "./build/dist"
        }
    },
    "path": {
        "indexHtml": "./src/index.html",
        "styleScss": "./src/index.style.scss",
        "vendorScss": "./src/index.vendor.scss",
        "bower": "./bower.json"
    },
    "glob": {
        "buildDist": "./build/dist/**",
        "asset": "./src/asset/**/*",
        "image": "./src/asset/image/**",   
        "fonts": "./src/asset/fonts/**",    
        "sass": "./src/app/**/*.scss",     
        "js": "./src/app/**/*.js",       
        "html": "./src/**/*.html",     
        "template": "./src/app/**/*.html", 
        "src": "./src/**/*",     
        "css": "./.tmp/css/**/*.css"   
    }
}