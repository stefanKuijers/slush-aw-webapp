{
    "name": "app",
    "build": {
        "production": true,
        "pathCorrection": {
            "assetImage": {
                "search": "asset/image/",
                "preplace": "dist/asset/image/"
            },
            "templatecache": {
                "prefix": "app/"
            },
            "assetPath": {
                "glob": "./build/**/*.css",
                "search": "/asset/",
                "replace": "/dist/asset/"
            }
        },
        "templatecacheTmpFile": "templates.js"
    },
    "dir": {
        "src": "./src",
        "app": "./src/app",
        "tmp": "./.tmp",
        "css": "./.tmp/css",
        "data": "./data",
        "asset": "./app/asset",
        "image": "./app/asset/image",
        "fonts": "./app/asset/fonts",
        "bower_components": "./bower_components",
        "build": {
            "root":  "./build",
            "src":   "./build/src",
            "dist":  "./build/dist",
            "asset": "./build/dist/asset",
            "fonts": "./build/dist/asset/fonts",
            "image": "./build/dist/asset/image",
            "app":   "./build/dist/asset/app",
            "css":   "./build/dist/asset/css"
        }
    },
    "path": {
        "indexHtml": "./src/index.html",
        "styleScss": "./src/index.style.scss",
        "vendorScss": "./src/index.vendor.scss",
        "bower": "./bower.json"
    },
    "glob": {
        "asset": [ 
            "./src/asset/**/*" 
        ],
        "image": [ 
            "./src/asset/image/**" 
        ],   
        "fonts": [ 
            "./src/asset/fonts/**" 
        ],    
        "sass": [ 
            "./src/app/**/*.scss" 
        ],    
        "template": [ 
            "./src/app/**/*.html" 
        ], 
        "src": [ 
            "./src/**/*" 
        ],     
        "css": [ 
            "./.tmp/css/**/*.css" 
        ],
        "bowerFonts": [
            "./bower_components/font-awesome/fonts/*.{eot,svg,ttf,woff,woff2}",
            "./bower_components/bootstrap-sass/assets/fonts/bootstrap/*.{eot,svg,ttf,woff,woff2}"
        ],
        "injectJs": [
            "!./src/app/**/*.spec.js",         
            "!./src/app/**/*.mock.js",         
            "./src/app/**/*.module.js",        
            "./src/app/**/*.!(module).js",     
            "./src/app/**/*.js"                
        ] 
    },
    "filter": {
        "font": "**/*.{eot,svg,ttf,woff,woff2}"
    },
    "inject": {
        "ignorePath": "src"
    }
}